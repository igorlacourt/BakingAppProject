<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_widget_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/appwidget_last_viewed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:text="@string/last_viewed"
        android:textColor="@color/widgetTextColor"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/appwidget_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/appwidget_last_viewed"
        android:background="@color/widgetLine"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/appwidget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:layout_below="@+id/appwidget_line"
        android:background="#00000000"
        android:textColor="@color/widgetTextColor"
        android:textSize="15sp" />

</RelativeLayout>
